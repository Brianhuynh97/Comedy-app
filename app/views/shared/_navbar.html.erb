<body>
  <div class="navbar navbar-fixed-top mx-2">
    <div class="container">
        <%# <div class="theme-switch" data-controller="navbar_controller">
          <div class="switch"></div>
        </div> %>

      <!-- Logo -->
      <li class="text-center">
        <%= link_to home_path, class: "navbar-brand" do %>
        <div class="logo"><i class="fa-solid fa-microphone-lines"></i></div><%= t(".profile", default: "Standup Finder") %>
        <% end %>
      </li>

      <!-- Right Navigation -->
      <!-- Different navigation if login or not -->
      <% if user_signed_in? %>
        <div class="navigation">
            <div class="dropdown">
              <% if current_user.photo.attached?  %>
                <%= cl_image_tag current_user.photo.key, height: 40, crop: :fill, class: "avatar-navbar dropdown-toggle", id: "navbar-menu", "data-toggle" => "dropdown" %>
              <% end %>
              <ul class="navbar-dropdown-menu">
                <li class="text-center">
                  <%= link_to lists_path, class: "navbar-item navbar-link" do %>
                    <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
                  <% end %>
                </li>
                <li class="text-center">
                  <%= link_to destroy_user_session_path, method: :delete do %>
                    <i class="fa-solid fa-arrow-right-from-bracket"></i></i>  <%= t(".sign_out", default: "Log out") %>
                  <% end %>
                </li>
                <li class="text-center">
                  <%= link_to new_show_path, class: "navbar-item navbar-link" do %>
                    <i class="fa-solid fa-masks-theater"></i><%= t(".new_show", default: "Host a show") %>
                  <% end %>
                </li>
              </ul>
            </div>
        </div>

      <% else %>

        <div class="navigation">
          <div class="dropdown">
            <ul class="navbar-dropdown-menu">
              <li class="text-center">
                <%= link_to new_user_registration_path, class: "navbar-item navbar-link" do %>
                  <i class="fa-solid fa-user-plus"></i><%= t(".sign_up", default: "Sign up") %>
                <% end %>
              </li>
              <li class="text-center">
                <%= link_to new_user_session_path, class: "navbar-item navbar-link" do %>
                  <i class="fa-solid fa-arrow-right-to-bracket"></i><%= t(".sign_in", default: "Log in") %>
                <% end %>
              </li>
              <li class="text-center">
                <%= link_to new_show_path, class: "navbar-item navbar-link" do %>
                  <i class="fa-solid fa-masks-theater"></i><%= t(".new_show", default: "Host a show") %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      <% end %>

    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  </div>
</body>
