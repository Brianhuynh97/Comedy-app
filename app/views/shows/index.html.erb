<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.3) 0%, rgba(0,36,61,0.4) 50%), url(/assets/microphone.jpg);">
  <span class="emoji monkey" role="img" aria-label="monkey"></span>
  <div class="banner-content">
    <div class="text-center">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
      <h1 class= "typeing" data-controller="banner_controller" data-typeingText= "Find comedy shows near you"></h1>
      <h3 class="typed-js"></h3>
    </div>
    <div class="box">Fill With <div class="word">
        <span> Joy</span>
        <span> Happiness</span>
        <span> Laughter</span>
        <span> Comfort</span>
      </div>
    </div>
  </div>
</div>

<div class="container py-5">
  <div class="row">
    <div class="d-flex align-items-center justify-content-between mb-3">
      <h3 class="mb-0">Comedy Shows</h3>
      <div>
        <i class="px-1 layout-buttons fa-solid fa-map-location" id="mapicon"></i>
        <i class="px-1 d-none layout-buttons fas fa-border-all" id="gridicon"></i>
      </div>
      <%= link_to "Host a comedy show", new_show_path, class: "Host_comedy px-md-4 btn btn-success" %>
    </div>
    <div id="gridactive">
      <div class="row justify-content-center justify-content-sm-start">
        <% @shows.each do |show| %>
            <div class="col-8 col-sm-6 col-md-3 col-xl-2 mb-3">
              <%= link_to show_path(show), class: "text-decoration-none" do %>
                <div class="card-category" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= show.photo.attached? ? cl_image_path(show.photo.key) : asset_path('mic.png')%>)">
                  <h3><%= show.title%></h3>
                </div>
              <% end %>
            </div>
          <% end %>
      </div>
    </div>
  </div>

  <div id="mapactive" class="d-none">
    <div class="row">
        <div class="col-md-7 col-xs-10 rounded"
          data-controller="mapbox"
          data-mapbox-markers-value="<%= @markers.to_json %>"
          data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
          id="mapbox">
        </div>
        <div class="col-md-5 d-none d-md-block " id="card-column">
          <div id="mapcards" class="row">
            <% @shows.each do |show| %>
                <%= link_to show_path(show), class: "text-decoration-none" do %>
                    <div class="card-map rounded">
                      <%= image_tag 'mic.png' %>
                      <div>
                        <h4><%= show.title %></h4>
                        <div class="info d-flex justify-content-between">
                          <h5><%= show.datetime.strftime("%d/%m/%Y") %> </h5>
                        </div>
                      </div>
                    </div>
                <% end %>
            <% end %>
          </div>
            <%# <div class="card"> %>
              <%# <div class="card-description"> %>
                <%# <p><strong id="location"><%= show.location %>
                <%# <div class="card-price"></div> %>
                <%# <><%= show.price %>
                <%# </div> %>
            <%# </div> %>
      </div>
    </div>
  </div>
</div>
