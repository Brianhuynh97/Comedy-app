<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.3) 0%, rgba(0,36,61,0.4) 50%), url(/assets/microphone.jpg);">

<span class="emoji monkey" role="img" aria-label="monkey"></span>

<div class="banner-content">

  <div class="text-center">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <h1 class= "typeing" data-controller="banner_controller" data-typeingText= "Find comedy shows near you"></h1>
    <h3 class="typed-js"></h3>
  </div>

<div class="box">Fill With <div class="word">
    <span> Joy</span>
    <span> Happiness</span>
    <span> Laughter</span>
    <span> Comfort</span>
  </div>
</div>

</div>
</div>

<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">Comedy Shows <img src="/assets/clown.gif" width="30" height="30" style="black"></h3>
    <%= link_to "Host a comedy show", new_show_path, class: "Host_comedy btn btn-success" %>
  </div>
  <div class="row">
    <% @shows.each do |show| %>
      <div class="co-12 col-sm-6 col-md-4 mb-3">
        <%= link_to show_path(show), class: "text-decoration-none" do %>

          <div class="card-category" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= show.photo.attached? ? cl_image_path(show.photo.key) : asset_path('mic.png')%>)">
            <%= show.title %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<div style="width: 100%; height: 600px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
