<div class="container-registration container bg-light w-75 p-5">
  <div class="row-register">

    <div id="loader">
	    <div id="d1"></div>
	    <div id="d2"></div>
	    <div id="d3"></div>
	    <div id="d4"></div>
	    <div id="d5"></div>
    </div>

    <div class="signup">
      <div class="form text-center">

          <div class="item">‚úç</div>

        <h2>Sign up</h2>
        <br>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
        <%= f.input :first_name, required: true %>
        <%= f.input :last_name,
                required: true %>
        <%= f.input :username,
                required: true%>
        <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
        <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
        <%= f.input :date_of_birth,
                required: true %>
        <%= f.input :photo, as: :file %>
        </div>

        <br>
        <div class="form-actions">
        <%= f.button :submit, "Sign up", class:"btn btn-success"%>
        </div>
        <br>
        <hr>
        <%= render "devise/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
.container-registration {
  background:rgba(241, 206, 184, 1);
  background:
    -moz-linear-gradient(
      -45deg,
      rgba(241, 206, 184, 1) 0%,
      rgba(142, 186, 163, 1) 100%
  );
  background:
    -webkit-linear-gradient(
      -45deg,
      rgba(241, 206, 184, 1) 0%,
      rgba(142, 186, 163, 1) 100%);
  width: 1170px;
  padding-top: 40px;
  padding-bottom: 90px;
}

.form {

  border-radius: 3px;
  padding-right: 50px;
  padding-left: 50px;
  padding-bottom: 30px;
}

.item {
  position: center;
  font-size: 40px;
}

#loader {
  width: 100px;
  height: 40px;
  position: absolute;
  top: 32%;
  left: 55%;
  margin: -20px -50px;
}
#loader div {
	width: 20px;
  height: 20px;
	background: #4e4e4e;
  border-radius: 50%;
  position: absolute;

}
#d1 { animation: animate 2s linear infinite;}
#d2 { animation: animate 2s linear infinite -.4s; }
#d3 {animation: animate 2s linear infinite -.8s; }
#d4 { animation: animate 2s linear infinite -1.2s; }
#d5 { animation: animate 2s linear infinite -1.6s; }
@-webkit-keyframes animate {
  0% { left: 100px; top:0}
  80% { left: 0; top:0;}
  85% { left: 0; top: -20px; width: 20px; height: 20px;}
  90% { width: 40px; height: 15px; }
  95% { left: 100px; top: -20px; width: 20px; height: 20px;}
  100% { left: 100px; top:0; }
}

.form h2 {
  font-weight: bold;
  color: #7a4b4b;
}

</style>
